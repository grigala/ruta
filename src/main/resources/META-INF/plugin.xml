<idea-plugin>
    <id>io.github.grigala.plugins.ruta</id>
    <name>Ruta</name>
    <vendor>JetBrains</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="io.github.grigala.plugins.ruta.services.RutaApplicationService"/>
        <projectService serviceImplementation="io.github.grigala.plugins.ruta.services.RutaApplicationService"/>
    </extensions>

    <applicationListeners>
        <listener class="io.github.grigala.plugins.ruta.listeners.RutaProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
